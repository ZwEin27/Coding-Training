package problems;


//Definition for singly-linked list.
class ListNode {
    int val;
    ListNode next;
    ListNode(int x) {
        val = x;
        next = null;
    }
}


public class No_2_Add_Two_Numbers {

	public static void main(String[] args) {
		No_2_Add_Two_Numbers no2 = new No_2_Add_Two_Numbers();
		ListNode l1 = new ListNode(2);
		
		ListNode l2 = new ListNode(2);
		
		no2.addTwoNumbers(l1, l2)
	}

	 public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
		 //ListNode curl1=l1,curl2=l2;
		 ListNode returnLN = null;
		 ListNode curRLN = null;
		 int ao = 0;
		 while(l1.next!=null||l2.next!=null){
			 int sum = l1.val + l2.val + ao;
			 		 
			 if (returnLN==null) {
				 returnLN = new ListNode(sum%10 + ao);
				 curRLN = returnLN;
			 } else {
				 curRLN.next = new ListNode(sum%10 + ao);
				 curRLN = curRLN.next;
			 }
			 
			 l1 = l1.next;
			 l2 = l2.next;
			 
			 if (sum>=10){
				 ao = 1;
			 } else {
				 ao = 0;
			 }
			 
			 
		 }
		 
		 
		 
		return returnLN;
	 }
	
}
